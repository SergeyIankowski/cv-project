{
  "include": ["./src/**/*", "module.d.ts", "webpack.config.js", "webpack.dev.js", "webpack.prod.js"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "outDir": "./dist/",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "lib": ["es6", "dom"],
    "module": "es6",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "baseUrl": "./src/",
    "paths": {
      "@/*": ["*"],
      "@view/*": ["components/view/*"],
      "@containers/*": ["components/containers/*"]
    }
  },
  "files": ["src/index.tsx"]
}
