{
  "include": ["./src/**/*", "module.d.ts", "webpack.config.js", "webpack.dev.js", "webpack.prod.js", "next-i18next.config.js"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "outDir": "./dist/",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "lib": ["ESNext", "dom", "dom.Iterable"],
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "baseUrl": "./src/",
    "paths": {
      "@/*": ["*"],
      "@view/*": ["components/view/*"],
      "@containers/*": ["components/containers/*"]
    }
  },
  "files": ["src/index.tsx"]
}
